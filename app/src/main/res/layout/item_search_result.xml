<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white"
    app:theme="@style/AppTheme2">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/row"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_paddingLeftPercent="5%sw"
        app:layout_paddingRightPercent="3%sw">

        <TextView
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="故障1"
            android:textColor="@color/md_grey_500"
            app:layout_heightPercent="10%sh"
            app:layout_textSizePercent="2.7%sh" />

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:iiv_color="@color/colorPrimary"
            app:iiv_icon="ion-android-open"
            app:layout_marginRightPercent="2%sw"
            app:layout_marginLeftPercent="2%sw"
            app:layout_heightPercent="3%sh"
            app:layout_widthPercent="3%sh" />

    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentFrameLayout>