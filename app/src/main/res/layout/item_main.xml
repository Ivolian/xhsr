<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:theme="@style/AppTheme2"
        app:layout_heightPercent="33%sw">

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:iiv_color="@color/colorPrimary"
            app:iiv_icon="cmd-google-glass"
            app:layout_heightPercent="6%sh"
            app:layout_marginBottomPercent="1%sh"
            app:layout_widthPercent="6%sh" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工单管理"
            android:textColor="@color/md_grey_600"
            app:layout_marginTopPercent="1%sh"
            app:layout_textSizePercent="2.5%sh" />

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentFrameLayout>

